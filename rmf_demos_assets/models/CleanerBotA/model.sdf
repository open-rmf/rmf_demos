<?xml version="1.0"?>

<sdf version="1.6">
  <model name='CleanerBotA'>

    <!-- TODO: Find actual physical properties for CleanerBotA instead of duplicating -->
    <!-- Note: rotational axis of the robot should located at the origin  -->

    <plugin name="slotcar" filename="libslotcar.so">

      <!-- Forward / Backward -->
      <nominal_drive_speed>0.7</nominal_drive_speed>
      <nominal_drive_acceleration>0.5</nominal_drive_acceleration>
      <max_drive_acceleration>0.6</max_drive_acceleration>

      <!-- Turning -->
      <nominal_turn_speed>0.4</nominal_turn_speed>
      <nominal_turn_acceleration>1.0</nominal_turn_acceleration>
      <max_turn_acceleration>1.2</max_turn_acceleration>

      <!-- Stop distance and radius  -->
      <stop_distance>1.5</stop_distance>
      <stop_radius>1.5</stop_radius>

      <!-- Can the robot drive backwards -->
      <reversible>false</reversible>

      <!-- Battery params -->
      <nominal_voltage>24.0</nominal_voltage>
      <nominal_capacity>20.0</nominal_capacity>
      <charging_current>10.0</charging_current>

      <!-- Physical params -->
      <mass>70.0</mass>
      <inertia>40.0</inertia>
      <friction_coefficient>0.22</friction_coefficient>

      <!-- Power systems -->
      <nominal_power>100.0</nominal_power>

    </plugin>


    <!-- ====================================================== -->
    <!-- Main CleanerBotA Body -->
    <!-- ====================================================== -->

    <link name="body">
      <pose>0 0 0 0 0 0</pose>

      <inertial>
        <pose>0.36 0 0.43294142 0 0 0</pose>
        <mass>15.0</mass> <!-- Mass reduced to prevent model rolling when stationary -->
        <inertia>
          <ixx>3.016</ixx>
          <iyy>2.332</iyy>
          <izz>2.425</izz>
        </inertia>
      </inertial>

      <visual name="visual">
        <pose frame=''>0.36 0 0 0 0 0</pose>
        <geometry>
          <mesh><uri>model://CleanerBotA/meshes/CleanerBotA.obj</uri></mesh>
        </geometry>
      </visual>
      <collision name="body_collision">
        <pose frame=''>0.46 0 0.7 0 0 0</pose>
        <geometry>
          <box>
            <size>1.3 0.8 1.2</size>
          </box>
        </geometry>
      </collision>

      <visual name="WheelFront">
        <pose>0.86 0.0 0.07 0 0 0</pose>
        <geometry>
          <mesh>
            <uri>model://CleanerBotA/meshes/CleanerBotA_WheelFront.obj</uri>
          </mesh>
        </geometry>
      </visual>
      <collision name='front_wheel_collision'>
        <pose>0.86 0.0 0.06 0 0 0</pose>
        <geometry>
          <sphere>
            <radius>0.1</radius>
          </sphere>
        </geometry>
        <surface>
          <contact>
            <ode>
              <kp>1e+08</kp>
              <min_depth>0.005</min_depth>
            </ode>
          </contact>
          <friction>
            <ode>
              <mu>0</mu>
              <mu2>0</mu2>
            </ode>
          </friction>
        </surface>
      </collision>

    </link>

    <!-- ====================================================== -->
    <!-- Left wheel link and revolute joint -->
    <!-- ====================================================== -->

    <link name="tire_left">
      <pose>0 0.26 0.08 0 0 0</pose>

      <inertial>
        <pose>0 0 0 0 0 0</pose>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.02</ixx>
          <iyy>0.02</iyy>
          <izz>0.02</izz>
        </inertia>
      </inertial>

      <visual name="tire_left">
        <geometry>
          <mesh>
            <uri>model://CleanerBotA/meshes/CleanerBotA_WheelBack.obj</uri>
          </mesh>
        </geometry>
      </visual>

      <collision name='tire_left_collision'>
        <geometry>
          <sphere>
            <radius>0.1</radius>
          </sphere>
        </geometry>
        <surface>
          <contact>
            <ode>
              <kp>10000000.0</kp>
              <kd>1.0</kd>
            </ode>
          </contact>
        </surface>
      </collision>
    </link>

    <joint name="joint_tire_left" type="revolute">
      <parent>body</parent>
      <child>tire_left</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

    <!-- ====================================================== -->
    <!-- Right wheel link and revolute joint -->
    <!-- ====================================================== -->

    <link name="tire_right">
      <pose>0 -0.26 0.08 0 0 0</pose>
      <inertial>
        <pose>0 0 0 0 0 0</pose>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.02</ixx>
          <iyy>0.02</iyy>
          <izz>0.02</izz>
        </inertia>
      </inertial>

      <visual name="tire_right">
        <geometry>
          <mesh>
            <uri>model://CleanerBotA/meshes/CleanerBotA_WheelBack.obj</uri>
          </mesh>
        </geometry>
      </visual>

      <collision name='tire_right_collision'>
        <geometry>
          <sphere>
            <radius>0.1</radius>
          </sphere>
        </geometry>
        <surface>
          <contact>
            <ode>
              <kp>10000000.0</kp>
              <kd>1.0</kd>
            </ode>
          </contact>
        </surface>
      </collision>
    </link>

    <joint name="joint_tire_right" type="revolute">
      <parent>body</parent>
      <child>tire_right</child>
      <axis>
        <xyz>0 1 0</xyz>
      </axis>
    </joint>

  </model>
</sdf>
